@model List<int>

@{
    bool required = ViewData["required"] == null ? false : (bool)ViewData["required"];

    Dictionary<String, object> attributes = new Dictionary<string, object>();
    attributes.Add("style", "width:100%; resize: none;");
    attributes.Add("class", "includeHidden form-control");
    attributes.Add("rows", 3);
    attributes.Add("size", 3);
    attributes.Add("multiple", "multiple");

    if (required)
    {
        attributes.Add("required", "");
    }
}

<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "col-sm-3 control-label" })
    <div class="col-sm-9">
        @(Html.ListBoxFor(m => m,
        new MultiSelectList(Extensions.GetTradingSetups(), "Value", "Text", Model),
        attributes))
    </div>
</div>

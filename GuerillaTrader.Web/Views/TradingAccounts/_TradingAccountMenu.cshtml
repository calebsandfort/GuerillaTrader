@model List<TradingAccountDto>

@{ 
    TradingAccountDto activeTradingAccount = Model.First(x => x.Active);
}

<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span id="activeTradingAccount" data-id="@activeTradingAccount.Id">@activeTradingAccount.Name</span> <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (TradingAccountDto tradingAccount in Model)
            {
                <li><a href="javascript:void(0);" onclick='GuerillaTrader.TradingAccount.setActive(@tradingAccount.Id, "@tradingAccount.Name")'>@tradingAccount.Name</a></li>
            }
        </ul>
    </li>
</ul>
